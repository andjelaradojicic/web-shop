
@{
    Layout = null;
}
@using Projekat.Models
@model  Proizvod

<!DOCTYPE html>
<html>
<head>
    <title>Veb prodavnica</title>
    <link rel="stylesheet" href="~/Content/stil.css">
</head>
<body>
    <div class="navigacija">

        <div class="navigacija-levo">
            <form action="~/Home/Index">
                <input type="submit" value="Pocetna" />
            </form>
        </div>
        <div class="navigacija-desno">
            <form action="/Korisnik/Pregled">
                <input type="submit" value="Profil" />
            </form>
            <form action="/Prijava/Odjava">
                <input type="submit" value="Odjava" />
            </form>
        </div>
    </div>

    <h1>Izmeni proizvod</h1>
    <div class="kontejner">
        <form action="~/Proizvod/IzmeniProizvod" method="post" enctype="multipart/form-data" class="kontejner-forma-login">
            <div class="forma-login-inputs">
                <label>Id:</label>
                <input type="number" name="id" value="@Model.Id" readonly />

                <label>Naziv:</label>
                <input type="text" name="naziv" value="@Model.Naziv" />

                <label>Cena:</label>
                <input type="number" name="cena" value="@Model.Cena" />

                <label>Kolicina:</label>
                <input type="number" name="kolicina" value="@Model.Kolicina" />

                <label>Opis:</label>
                <input type="text" name="opis" value="@Model.Opis" />

                <label>Slika:</label>
                <input type="file" name="slika" value="" />

                @{
                    string godina = Model.DatumPostavljanja.Year.ToString();
                    string mesec = Model.DatumPostavljanja.Month.ToString().PadLeft(2, '0');
                    string dan = Model.DatumPostavljanja.Day.ToString().PadLeft(2, '0');
                    string datum = $"{godina}-{mesec}-{dan}";
                }

                <label hidden>Datum:</label>
                <input type="date" name="datumPostavljanja" value="@datum" hidden />

                <label>Grad</label>
                <input type="text" name="grad" value="@Model.Grad" />

                <label hidden>Dostupan</label>
                <input type="checkbox" name="dostupan" value="@Model.Dostupan" hidden />

                <input type="submit" value="Sacuvaj izmenu" />
            </div>
        </form>
        </div>
</body>
</html>
