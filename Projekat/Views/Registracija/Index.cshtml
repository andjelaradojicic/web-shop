
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Veb prodavnica</title>
    <link rel="stylesheet" href="~/Content/stil.css">
</head>
<body>

    <div class="navigacija">
        <div class="navigacija-levo">
            <form action="~/Home/Index">
                <input type="submit" value="Pocetna" />
            </form>
        </div>
        <div class="navigacija-desno">
            <form action="/Prijava/Index">
                <input type="submit" value="Prijava" />
            </form>
            <form action="/Registracija/Index">
                <input type="submit" value="Registracija" />
            </form>
        </div>
    </div>

    @if (TempData["greska"] != null)
    {
        <div class="kontejner-greska-login"><div>@TempData["greska"]</div></div>

    }

    <div class="kontejner">
        <form action="~/Registracija/Registracija" method="post" class="kontejner-forma-login">
            <div class="forma-login-inputs">
                <label>Korisnicko ime:</label>
                <input type="text" name="korisnickoIme" required />

                <label>Lozinka:</label>
                <input type="password" name="lozinka" required />

                <label>Ime:</label>
                <input type="text" name="ime" required />

                <label>Prezime:</label>
                <input type="text" name="prezime" required />

                <label>Pol:</label>
                <select name="pol" >
                    <option value="Muski">Muski</option>
                    <option value="Zenski">Zenski</option>
                </select>

                <label>Email:</label>
                <input type="email" name="email" />

                <label>Datum rodjenja:</label>
                <input type="date" name="datumRodjenja" required />

                <label hidden="hidden">Uloga:</label>
                <select name="uloga" hidden="hidden">
                    <option>Kupac</option>
                </select>

                <input type="submit" value="Registracija" />

            </div>
        </form>
    </div>
</body>
</html>